datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Application {
  id              String   @id @default(uuid())
  name            String
  roll            String   @unique
  email           String
  phone           String?
  whatsapp        String?
  domain          String
  resumeUrl       String?
  portfolioUrl    String?
  linkedinUrl     String?
  githubUrl       String?
  otherLinks      String?
  pastExperience  String?
  otherSocieties  String?
  hearAboutUs     String?
  referral        String?
  createdAt       DateTime @default(now())
}

